<article id="spot_form">
	<h2 class="spot_title">{{name}}</h2>

	<form action="" class="form-horizontal">
		<div class="control-group">
			<label for="photo" class="control-label">Lade ein Foto hoch</label>
			<div class="controls">
				<input id="photo" type="file" data-toggle="fancyfile" name="photo" class="form-control">
				<span class="help-block">Dieses Foto wird direkt auf der Karte zu sehen sein.</span>
			</div>
		</div>
		<div class="control-group">
			<label for="description" class="control-label">Beschreibung</label>
			<div class="controls">
				<input id="description" type="text" placeholder="Beschreibung" name="description" class="form-control">
			</div>
		</div>
		<div class="control-group">
			<label for="username" class="control-label">Username</label>
			<div class="controls">
				<input id="username" type="text" placeholder="Username" name="username" class="form-control">
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button type="submit" class="btn btn-primary">Speichern</button>
			</div>
		</div>
	</form>
</article>